<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Resume</th>
      <th>Author</th>
      <th>Status</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.resume %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.category %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure ?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>